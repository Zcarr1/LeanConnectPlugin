<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-mobile-leanconnect" version="0.10.0"
	xmlns="http://apache.org/cordova/ns/plugins/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<name>LeanConnectPlugin</name>
	<js-module name="LeanConnectPlugin" src="www/LeanConnectPlugin.js">
		<clobbers target="cordova.plugins.LeanConnectPlugin" />
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="LeanConnectPlugin">
				<param name="android-package" value="com.mobile.leanconnect.LeanConnectPlugin" />
			</feature>
		</config-file>
		<config-file parent="/*" target="AndroidManifest.xml">
			<uses-permission android:name="android.permission.NFC" />
		</config-file>
		<source-file src="src/android/LeanConnectPlugin.java" target-dir="src/com/mobile/plugins/leanconnect/LeanConnectPlugin" />
		<framework custom="true" src="src/android/LeanConnectPlugin.gradle" type="gradleReference" />
		<resource-file src="src/android/libs/leanConnectInterfaceLib-debug.aar" target="libs/leanConnectInterfaceLib-debug.aar" />
		<resource-file src="src/android/libs/leanConnectLibForServices-debug.aar" target="libs/leanConnectLibForServices-debug.aar" />
	</platform>
	<platform name="ios">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="LeanConnectPlugin">
				<param name="ios-package" value="LeanConnectPlugin" />
			</feature>
		</config-file>
		<source-file src="src/ios/LeanConnectPlugin.swift" />
		<source-file src="src/ios/libs/LeanConnectMobileKit.framework" target-dir="libs" framework="true" />
		<framework src="src/ios/libs/LeanConnectMobileKit.framework" embed="false" custom="true" />
		<podspec>
			<config>
				<source url="https://cdn.cocoapods.org/"/>
			</config>
			<pods use-frameworks="true">
				<pod name="SQLite.swift" git="https://github.com/stephencelis/SQLite.swift.git" tag="0.13.2"/>
			</pods>
		</podspec>
	</platform>
</plugin>